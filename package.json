{
  "name": "vimix-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "vimix-scripts bootstrap",
    "build": "vimix-scripts turbo build",
    "build:prod": "vimix-scripts turbo build --prod",
    "clean": "vimix-scripts clean",
    "cov": "vitest run --coverage",
    "dep:update": "pnpm up --interactive --latest --recursive",
    "dev": "vimix-scripts turbo dev",
    "docs:build": "vimix build docs",
    "docs:dev": "vimix dev docs",
    "format": "prettier --cache --write .",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --cache --ext js,jsx,ts,tsx .",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx --quiet --cache .",
    "prebundle": "vimix-scripts turbo prebundle",
    "prepare": "husky install",
    "publish:pkg": "vimix-scripts publish",
    "release": "vimix-scripts release",
    "test": "vitest"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@vimix/cli": "workspace:*",
    "@vimix/node": "workspace:*",
    "@vimix/react": "workspace:*",
    "@vimix/vue": "workspace:*",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vitest/coverage-c8": "^0.25.1",
    "create-vimix": "workspace:*",
    "vimix": "workspace:*",
    "vimix-scripts": "workspace:*",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lerna": "^6.0.3",
    "lint-staged": "^13.0.3",
    "only-allow": "^1.1.1",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.2.0",
    "prettier-plugin-packagejson": "^2.3.0",
    "tsup": "^6.4.0",
    "tsx": "^3.12.1",
    "turbo": "^1.6.3",
    "typescript": "^4.8.4",
    "vite": "^3.2.3",
    "vitest": "^0.25.1",
    "zx": "^7.1.1"
  },
  "packageManager": "pnpm@7.15.0",
  "engines": {
    "node": "^14.18.0 || >=16.0.0",
    "pnpm": ">=7"
  },
  "pnpm": {
    "peerDependencyRules": {}
  }
}
